<configuration>
  <system.webServer>
    <!-- Indicates to the server that dist/index.js is a node.js application to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Do not interfere with requests for node-inspector debugging -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^dist/index.js\/debug[\/]?" />
        </rule>

        <!-- All other URLs are mapped to the node.js site entry point -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Exclude node_modules from being served directly -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- Logging setup -->
    <iisnode 
      node_env="%node_env%"
      loggingEnabled="true"
      devErrorsEnabled="true"
    />
  </system.webServer>

  <!-- Environment Variables -->
  <appSettings>
    <!-- GANTI NILAI DI BAWAH INI SESUAI KEBUTUHAN -->
    <add key="GOOGLE_CLIENT_ID" value="ISI_CLIENT_ID_GOOGLE_DISINI" />
    <add key="JWT_SECRET" value="RAHASIA_JWT_ANDA" />
    <add key="ADMIN_EMAILS" value="email_admin@gmail.com" />
    <!-- Database: Jika kosong, akan pakai mode JSON file -->
    <add key="DATABASE_URL" value="" />
  </appSettings>
</configuration>