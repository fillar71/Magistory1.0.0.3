<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>
    
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100MB Upload Limit -->
        <hiddenSegments>
          <!-- 'bin' is already hidden by default on SmarterASP/IIS. Adding it again causes a crash. -->
          <add segment="node_modules" />
          <add segment="src" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- 
      iisnode settings:
      - node_env: ensure production
      - loggingEnabled: true for debugging
      - idleTimeout: 10 minutes (600000ms) for rendering
      - watchedFiles: restart if web.config changes
    -->
    <iisnode 
      node_env="production"
      loggingEnabled="true"
      devErrorsEnabled="true"
      idleTimeout="600000" 
      watchedFiles="web.config;*.js"
    />
  </system.webServer>
</configuration>