<configuration>
  <system.webServer>
    <handlers>
      <!-- Point to server.js in root instead of dist/index.js -->
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <!-- Rewrite all requests to server.js -->
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100MB Upload Limit -->
        <hiddenSegments>
          <add segment="node_modules" />
          <!-- src is hidden for security, but dist must be accessible by the script -->
          <add segment="src" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- 
      iisnode settings:
      - node_env: ensure production
      - loggingEnabled: true creates a log folder for debugging startup errors
    -->
    <iisnode 
      node_env="production"
      loggingEnabled="true"
      devErrorsEnabled="true"
      idleTimeout="600000" 
      watchedFiles="web.config;*.js"
    />
  </system.webServer>
</configuration>